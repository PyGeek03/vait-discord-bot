{
  "name": "@viet-aus-it/discord-bot",
  "version": "0.0.1",
  "description": "Discord chat bot for VAIT",
  "main": "build/index.js",
  "engines": {
    "node": "^16.0.0",
    "npm": "^8.0.0",
    "yarn": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viet-aus-it/vait-discord-bot.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/viet-aus-it/vait-discord-bot"
  },
  "homepage": "https://github.com/viet-aus-it/vait-discord-bot#readme",
  "scripts": {
    "prepare": "husky install",
    "clean:all": "npm run prebuild && npm run pretest",
    "prebuild": "rimraf build",
    "build": "tsc --project tsconfig.build.json",
    "build:watch": "tsc -w --project tsconfig.build.json",
    "lint": "esw src --ext .ts",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "format": "yarn lint:fix && prettier -w src/**/*",
    "pretest": "rimraf coverage",
    "test": "jest",
    "test:silent": "jest --silent",
    "test:watch": "yarn test --watchAll",
    "start:script": "ts-node-dev --poll --transpile-only --no-notify ./src/index.ts",
    "start": "concurrently \"yarn:start:script\" \"yarn:lint:watch\"",
    "serve": "node build/index.js",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:gen": "npx prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^3.6.0",
    "cowsay": "^1.5.0",
    "discord.js": "^12.5.3",
    "node-fetch": "^2.6.1",
    "ramda": "^0.27.1"
  },
  "devDependencies": {
    "@jest/types": "^27.4.2",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@types/node-fetch": "^2.5.10",
    "@types/ramda": "^0.27.40",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "concurrently": "^6.4.0",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-watch": "^8.0.0",
    "faker": "^5.1.0",
    "husky": "^7.0.0",
    "jest": "^27.4.5",
    "jest-mock-console": "^1.2.3",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "prisma": "^3.6.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  }
}
